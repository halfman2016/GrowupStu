<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:id="@+id/suject_list_lineralayout"
    android:layout_margin="5dp"
    android:descendantFocusability="blocksDescendants"
    android:baselineAligned="false">

    <TextView
        android:text="专题名称"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/photoauthor" />

    <TextView
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtSubName"
        android:textSize="20sp"
        android:textColor="@color/green"

        />

    <TextView
        android:text="专题简介"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/photodate"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/txtSubinfo"
        android:layout_weight="0.10"

        android:selectAllOnFocus="false" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="67dp">

        <TextView
            android:text="专题时间"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="@string/promptendtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:id="@+id/textView11"
            android:layout_alignBaseline="@+id/txtSubendtime"
            android:layout_alignBottom="@+id/txtSubendtime"
            android:layout_toRightOf="@+id/txtSubstime"
            android:layout_toEndOf="@+id/txtSubstime" />

        <TextView
            android:text="@string/promptstarttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp"
            android:layout_alignBaseline="@+id/textView11"
            android:layout_alignBottom="@+id/textView11"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_height="wrap_content"
            android:text="结束时间"
            android:ems="10"
            android:id="@+id/txtSubendtime"
            android:layout_width="80dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/textView11"
            android:layout_toEndOf="@+id/textView11"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp" />

        <TextView
            android:layout_height="wrap_content"
            android:inputType="textPersonName"

            android:ems="10"
            android:id="@+id/txtSubstime"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_width="80dp"
            android:layout_alignBaseline="@+id/textView10"
            android:layout_alignBottom="@+id/textView10"
            android:layout_toRightOf="@+id/textView10"
            android:layout_toEndOf="@+id/textView10" />
    </RelativeLayout>


</LinearLayout>